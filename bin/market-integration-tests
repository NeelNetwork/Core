set -e

TOP_DIR=$(cd $(dirname $(dirname $0)) && pwd)
TEST_DIR="integration_tests"

run_test() {
  cd $TOP_DIR/$TEST_DIR/$1

  docker-compose rm -fs
  docker-compose up --abort-on-container-exit --build || true
  docker-compose down

  cd -
}

if [ -z $1 ]
then
  for t in $( ls $TEST_DIR )
  do
    run_test $t
  done

else
  run_test $1

fi
